										<!-- Jquery, aplicar multiple nas categorias / filtro -->
										<script>

											$('#is_recurrent').change(function() {
												if(this.checked) {
													$("#recurrence_type").css("display", "block");
													$("#is_fixed_div").css("display", "block");
												}
												else {
													$("#recurrence_type").css("display", "none");
